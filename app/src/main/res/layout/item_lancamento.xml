<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/iv_delete_item"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Excluir item"
        app:layout_constraintBottom_toBottomOf="@+id/tv_data_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_nome_item"
        tools:ignore="HardcodedText,VisualLintBounds" />

    <TextView
        android:id="@+id/tv_nome_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome do Item"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toEndOf="@id/iv_delete_item"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_data_item"
        tools:ignore="HardcodedText,VisualLintOverlap,VisualLintBounds" />

    <TextView
        android:id="@+id/tv_valor_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Valor do Item"
        android:textColor="#546E7A"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_delete_item"
        app:layout_constraintTop_toBottomOf="@id/tv_nome_item"
        tools:ignore="HardcodedText,VisualLintBounds" />

    <TextView
        android:id="@+id/tv_data_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Data de LanÃ§amento"
        android:textColor="#546E7A"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/iv_delete_item"
        app:layout_constraintTop_toBottomOf="@id/tv_valor_item"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
